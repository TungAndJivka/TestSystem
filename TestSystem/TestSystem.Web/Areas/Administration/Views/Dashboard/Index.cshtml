@model TestSystem.Web.Areas.Administration.Models.DashboardViewModels.IndexViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="page-header">@ViewData["Title"]</h2>


<div>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="tests-tab" data-toggle="tab" href="#tests" role="tab" aria-controls="tests" aria-selected="true">Tests</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="results-tab" data-toggle="tab" href="#results" role="tab" aria-controls="results" aria-selected="false">Test Results</a>
        </li>
    </ul>


    <div class="tab-content" id="AdminTabContent">

        <div id="TestsListTable">
            <table class="table table-bordered">
                @*Table Header*@
                <thead>
                    <tr class="table-header">
                        <th scope="col" class="col-md-4 text-center">Test Name</th>
                        <th scope="col" class="col-md-2 text-center">Category</th>
                        <th scope="col" class="col-md-2 text-center">Status</th>
                        <th scope="col" class="col-md-5 text-center">Actions</th>
                    </tr>
                </thead>

                @*Table Body*@
                <tbody>


                    @for (int i = 0; i < Model.Tests.Count(); i++)
                    {
                        if (i == 10)
                        {
                            break;
                        }

                        <tr id="row-@i">
                            <td scope="row">Sample Test Name</td>
                            <td class="text-center">Java</td>
                            <td class="text-center">Draft</td>
                            <td>
                                <div class="col-sm-4">
                                    <button class="button">Publish</button>
                                </div>
                                <div class="col-sm-4">
                                    <button class="button">Edit</button>
                                </div>
                                <div class="col-sm-4">
                                    <button class="button">Delete</button>
                                </div>
                            </td>
                        </tr>

                    }





                </tbody>
            </table>

        </div>

        <div id="ResultsListTable">

        </div>

        @*Pagination*@
        <nav aria-label="Page navigation example" class="pagination-area">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>

    </div>
</div>

